%nav.top-bar.main-navigation
  %ul.title-area
    %li
      = link_to root_path, class: 'link_logo' do
        = image_tag 'logoWashCost8.png', class: 'main_logo'
  %section.top-bar-section
    %ul.right
      %li
        %a{:href => "#"} About
      %li
        %a{:href => "#"} Contact
      %li.has-dropdown.not-click
        %a{:href => "#"} Language
        %ul.dropdown
          %li.title.back.js-generated
            %h5
              %a{:href => "#"} « Back
          %li
            = link_to 'English', :locale=>'en'
          %li
            = link_to 'Français', :locale=>'fr'
          %li
            %a{:href => "#"} Spanish
      %li
        - if user_signed_in? && current_user
          = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'topbar-sign'
        - else
          = link_to 'Sign In', new_user_session_path, class: 'topbar-sign'

