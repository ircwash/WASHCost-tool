- @title = "3 of 9 (Population)"
%h1.basic_tool_header_item= @population[:question_label]
= form_tag({controller: "water_basic", action: "population"}, class: "main_content", id: "waterBasicForm") do
  .choices
    .value
      .valueLabel= t 'form.water_basic.population.value_label'
      #populationValue.valueOutput 500
    #populationSlider.slider-container{'data-slider_value' => @population[:value].present? ? @population[:value] : 0}
      .test-cursor
  %input{:name => "population", :type => "hidden"}
  = submit_tag((t 'buttons.next'), class: "next_button")
  .infoTab
    %a.tab{:href => "#"} infoTab
    .tabContent
      %p= t 'form.water_basic.population.info'
