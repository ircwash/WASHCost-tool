<% @title = "2 of 9 (Water Source)" %>

<h1>
  <%= t 'form.water_basic.water.question' %>
</h1>
<%= form_tag({controller: "water_basic", action: "water"}, class: "main_content", id: "waterBasicForm") do %>

  <ul class="waterInput">
    <li>
      <%= label_tag("boreHold", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_water", 0, false, id: "boreHold") %>
        <span><%= t 'form.water_basic.water.answers.a0' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("mechanised", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_water", 1, id: "mechanised") %>
        <span><%= t 'form.water_basic.water.answers.a1' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("singleTown", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_water", 2, id: "singleTown") %>
        <span><%= t 'form.water_basic.water.answers.a2' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("multiTown", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_water", 3, id: "multiTown") %>
        <span><%= t 'form.water_basic.water.answers.a3' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("mixedPipe", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_water", 4, id: "mixedPipe") %>
        <span><%= t 'form.water_basic.water.answers.a4' %></span>
      <% end %>
    </li>
  </ul>

  <%= submit_tag((t 'buttons.next'), class: "next_button") %>
<% end %>

