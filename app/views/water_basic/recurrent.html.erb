<% @title = "5 of 9 (Recurrent Expenditure)" %>

<h1 class="basic_tool_header_item">
  <%= t 'form.shared.recurrent.question' %>
</h1>

<%= form_tag({controller: "water_basic", action: "recurrent"}, class: "main_content", id: "waterBasicForm") do %>
  <div class="choices washCostSlider">
    <div class="value">
      <div class="valueOutput"><span id="recurrentValue">3</span></div>
      <div class="valueLabel">
        <%= t 'form.water_basic.recurrent.value_label' %>
      </div>
    </div>
    <div id="recurrentSlider" data-slider_value=<%=@recurrent[:value]%>></div>
    <ul class="labelScale">
      <li class="first">
        <span class="estimate">Below</span>
        <span class="numRounding"><%=@recurrent[:below_value]%></span>
      </li>
      <li class="last">
        <span class="estimate">Above</span>
        <span class="numRounding"><%=@recurrent[:above_value]%></span>
      </li>
    </ul>
  </div>

  <input type="hidden" name="recurrent" data-min-value=<%=@recurrent[:min_value]%>  data-max-value=<%=@recurrent[:max_value]%> data-below-value=<%=@recurrent[:below_value]%> data-above-value=<%=@recurrent[:above_value]%> />
  <%= submit_tag((t 'buttons.next'), class: "next_button") %>
    <a class="skip" href="./time">skip this question</a>

  <div class="infoTab">
    <a href="#" class="tab">infoTab</a>
    <div class="tabContent">
      <p><%= t 'form.shared.recurrent.info' %></p>
    </div>
  </div>


<% end %>
