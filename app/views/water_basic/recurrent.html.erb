<% @title = "5 of 9 (Recurrent Expenditure)" %>

<h1>
  <%= t 'form.shared.recurrent.question' %>
</h1>

<%= form_tag({controller: "water_basic", action: "recurrent"}, class: "main_content", id: "waterBasicForm") do %>
  <div class="choices">
    <div class="value">
      <div class="valueOutput"><span id="recurrentValue">3</span> $</div>
      <div class="valueLabel">
        <%= t 'form.water_basic.recurrent.value_label' %>
      </div>
    </div>
    <div id="recurrentSlider" data-slider_value=<%=flash[:recurrent]%>></div>
  </div>

  <input type="hidden" name="recurrent"/>
  <%= submit_tag((t 'buttons.next'), class: "next_button") %>
    <a class="skip" href="./time">skip this question</a>

  <div class="infoTab">
    <a href="#" class="tab">infoTab</a>
    <div class="tabContent">
      <p><%= t 'form.shared.recurrent.info' %></p>
    </div>
  </div>


<% end %>
