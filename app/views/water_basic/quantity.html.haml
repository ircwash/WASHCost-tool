= content_for :title do
  7 of 9 (Water Source)

.question
  %h1.question--title= t 'form.water_basic.quantity.question'

  .question--answer

    .question--answer--title= t 'form.water_basic.quantity.value_label'

    = form_tag( { controller: "water_basic", action: "quantity" }, id: "waterBasicForm") do

      .question--radios
        - @quantity[:choices].each_with_index do |choice, index|
          = label_tag( choice, nil, class: "question--radios--label" ) do
            = radio_button_tag( 'quantity', index, index == @quantity[:value], id: choice, :class => 'question--radios--radio' )
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{choice}" }
            %span.question--radios--text= t "form.water_basic.quantity.answers.a#{index}"

      .question--buttons
        = submit_tag((t 'buttons.next'), class: 'button')