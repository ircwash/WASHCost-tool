<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>WashCostApp - Advances</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width">

  <link href="/assets/application.css" media="all" rel="stylesheet" type="text/css">
    <link href="/assets/global_advance_select_page.css" media="all" rel="stylesheet" type="text/css">
  <script src="/assets/modernizr.js" type="text/javascript"></script>

</head>
<body class="launchPage">
<div class="wrapper bgGradient">
  <div class="header">
    <a href="#" class="logo">
      <img src="/assets/logoWashCost8.png" alt="WASHCost" />
    </a>
    <ul>
      <li><a href="#">about</a></li>
      <li><a href="#">contact</a></li>
      <li>
        <ul class="languageSwitcher">
          <li><a class="active" href="#">English</a></li>
          <li><a href="#">French</a></li>
        </ul>
      </li>
      <li><a class="sign" href="#">Sign in</a></li>
    </ul>
  </div>
  <form action="/select_advanced/" method="post" id="advancedSelectorForm">
    <section class="main">
      <div class="mainWrapper">
        <head>
          <h1>Select which calculator you wish to use</h1>
        </head>
        <section class="calculatorSwitch">
          <ul>
            <li>
              <%= label_tag("advWater", nil, class: "tickCheckBox advanceWater") do %>
                <span>Water</span>
                <%= radio_button_tag("r_targetForm", 'water', id: "advWater") %>
              <% end %>
            </li>
            <li>
              <%= label_tag("advSanita", nil, class: "tickCheckBox advanceSanitation") do %>
                <span>Sanitation</span>
                <%= radio_button_tag("r_targetForm", 'sanitation', id: "advSanita") %>
              <% end %>
            </li>
          </ul>
          <input class="schemeSwitcher" value="&#43; Calculate Existing Scheme" type="submit" onclick="submitForm('existing');" />
          <input class="schemeSwitcher" value="&#43; Calculate Planned Scheme" type="submit" onclick="submitForm('planned');" />

        </section>
      </div>
    </section>
  <footer>
    <div class="footerWrapper">
      <h2>Final Report</h2>
      <div class="progressBar">
        <div class="outerBar">
          <div class="innerBar" style="width:30%"></div>
          <p>30% Complete</p>
        </div>
      </div>
    </div>
  </footer>
    <input type="hidden" name="targetForm" id="targetForm"/>
    <input type="hidden" name="type" id="type"/>
  </form>
  <script src="/assets/jquery-1.9.1.js" type="text/javascript"></script>
  <script src="/assets/chosen.jquery.js" type="text/javascript"></script>
  <script src="/assets/application.js" type="text/javascript"></script>
  <script>

    function submitForm(type)
    {
        $('#type').val(type);
        $('#advancedSelectorForm').submit();
    }


  </script>
</div>
</body>
</html>
