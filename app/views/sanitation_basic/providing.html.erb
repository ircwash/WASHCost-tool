<% @title = "6 of 10 (Providing)" %>

<h1 class="basic_tool_header_item"><%= t 'form.sanitation_basic.providing.question' %></h1>
<%= form_tag({controller: "sanitation_basic", action: "providing"}, class: "main_content sanitation", id: "waterBasicForm") do %>


   <ul class="provideInput">
     <li>
       <%= label_tag("capitalYes", nil, class: "tickCheckBox") do %>
           <%= radio_button_tag("r_providing", 0, 0 == flash[:providing], id: "capitalYes") %>
           <span><%= t 'form.sanitation_basic.providing.answers.a0' %></span>
       <% end %>
     </li>
     <li>
       <%= label_tag("capitalNo", nil, class: "tickCheckBox provideInput_01") do %>
           <%= radio_button_tag("r_providing", 1, 1 == flash[:providing], id: "capitalNo") %>
           <span><%= t 'form.sanitation_basic.providing.answers.a1' %></span>
       <% end %>
     </li>
   </ul>

    <input type="hidden" name="providing"/>
    <%= submit_tag((t 'buttons.next'), class: "next_button") %>

<% end %>
