= content_for :title do
  7 of 11 (Impermeablity)

.question
  %h1.question--title= t 'form.sanitation_basic.impermeability.question'

  .question--answer

    = form_tag basic_sanitation_action_url( I18n.locale, 'impermeability' ), id: 'sanitationBasicForm' do

      .question--radios
        - @impermeability[:choices].each_with_index do |choice, index|
          = label_tag( choice, nil, class: "question--radios--label question--radios--label-wide" ) do
            = radio_button_tag( 'impermeability', index, index == @impermeability[:value], id: choice, :class => 'question--radios--radio' )
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{choice}" }
            %span.question--radios--text= t "form.sanitation_basic.impermeability.answers.a#{index}"

      .question--buttons
        = submit_tag((t 'buttons.next'), class: 'button')


