= content_for :title do
  8 of 11 (Environment) - Basic Sanitation Calculator

.question
  %h1.question--title= t 'basic.sanitation.questionnaire.environmental_impact.question'

  .question--answer

    = form_for @questionnaire, :url => basic_sanitation_update_url( I18n.locale, 'usage' ), :html => { 'data-dynamic_form' => basic_sanitation_dynamic_update_url( I18n.locale ) } do |f|

      .question--radios
        - options_for_latrine_environmental_impact.each do |option|
          = f.label( "environmental_impact_#{option[1]}", :class => "question--radios--label question--radios--label-wide" ) do
            = f.radio_button :environmental_impact, option[1], :class => 'question--radios--radio'
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{option[0]}" }
            %span.question--radios--text= t( "basic.sanitation.questionnaire.environmental_impact.options.#{option[0]}" )

      .question--buttons
        = submit_tag t( 'buttons.next' ), :class => 'button'

