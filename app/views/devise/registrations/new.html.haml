.boxed_container.boxed_container-full_height
  .boxed_content
    .page_content

      = form_for @user, :url => registration_path( :user ), :html => { :class => 'standalone_form' } do |f|

        %h1.standalone_form--heading Create your account

        = render "devise/shared/messages"

        .standalone_form--field.standalone_form--field-text
          = f.text_field :email, :class => 'standalone_form--field--input standalone_form--field--input-text', :placeholder => 'Email'

        .standalone_form--field.standalone_form--field-text
          = f.password_field :password, :class => 'standalone_form--field--input standalone_form--field--input-text', :placeholder => 'Password'

        .standalone_form--field.standalone_form--field-text
          = f.password_field :password_confirmation, :class => 'standalone_form--field--input standalone_form--field--input-text', :placeholder => 'Repeat your password'

        .standalone_form--footer
          .standalone_form--buttons
            = f.submit "Register", :class => 'button'

          .standalone_form--links
            = render "devise/shared/links"

        .standalone_form--promo
          Please visit the
          = link_to 'WASHCost Blog', 'http://blog.washcost.org/', :class => 'standalone_form--promo--link'
          to learn more about the Advanced Calculator
