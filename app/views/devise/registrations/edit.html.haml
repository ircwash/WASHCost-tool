.session.pad-session
  .row
    %h2.text-center
      Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .large-5.columns
        %div
          = f.input :first_name, :autofocus => true
        %div
          = f.input :company
        %div
          = f.input :email
        %div
          = f.input :password
      .large-5.large-offset-1.columns
        %div
          = f.input :last_name
        .select-container-simple
          = f.input :country, input_html: {class: "chzn-select"}, include_blank: false
        .select-container-simple
          = f.input :prefered_language, collection: ['English','Spanish','French'], include_blank: false, input_html: {class: "chzn-select"}
        %div
          = f.input :password_confirmation
        %div
          = f.input :current_password
        .right= f.button :submit, "Edit", class: 'button'
  .row
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
    -#= link_to "Back", :back
