- if controller_name != 'sessions'
  = link_to t( 'devise.sign_in' ), new_session_path( :user ), :class => 'standalone_form--link'

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t( 'devise.sign_up' ), new_registration_path( :user ), :class => 'standalone_form--link'

- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t( 'devise.forgot_your_password' ), new_password_path( :user ), :class => 'standalone_form--link'

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t( 'devise.didnt_receive_confirmation_instructions' ), new_confirmation_path( :user ), :class => 'standalone_form--link'

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t( 'devise.didnt_receive_unlock_instructions' ), new_unlock_path( :user ), :class => 'standalone_form--link'

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to t( 'devise.sign_in_with_provider', :provider => provider.to_s.titleize ), omniauth_authorize_path( :user, provider), :class => 'standalone_form--link'

